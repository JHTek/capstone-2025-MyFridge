<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background">

    <!-- 타이틀 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="상품 추가"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="10dp">

            <!-- 기본 상품 필드 -->
            <LinearLayout
                android:id="@+id/productField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 냉장고 선택 Spinner -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="냉장고 선택"
                    android:textSize="16sp"
                    android:textColor="#aaaaaa"
                    android:paddingBottom="5dp"/>

                <Spinner
                    android:id="@+id/refrigeratorSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:background="@drawable/input_background"
                    android:padding="10dp"
                    android:prompt="@string/refrigerator_prompt"/>

                <!-- 보관 방식 Spinner -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="보관 방식"
                    android:textSize="16sp"
                    android:textColor="#aaaaaa"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"/>

                <Spinner
                    android:id="@+id/storageTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:padding="10dp"/>

                <!-- 상품명 입력 -->
                <EditText
                    android:id="@+id/productNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="상품명을 입력하세요"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/input_background"
                    android:layout_marginTop="10dp"/>

                <!-- 수량 및 유통기한 입력 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/quantityEditText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="수량"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:background="@drawable/input_background"/>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/expirationDateEditText"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:hint="유통기한 선택"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:background="@drawable/input_background"
                        android:focusable="false"/>

                    <ImageButton
                        android:id="@+id/calendarButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?android:selectableItemBackground"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 동적으로 생성된 상품 입력 필드들 -->
            <LinearLayout
                android:id="@+id/productFieldsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- 상품 추가 버튼 -->
    <Button
        android:id="@+id/addProductButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 추가하기"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:backgroundTint="#DDDDDD"
        android:layout_marginTop="10dp"/>

    <!-- 버튼 영역 (하단 고정) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="@color/black"
            android:backgroundTint="#CCCCCC"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업로드"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"/>
    </LinearLayout>
</LinearLayout>

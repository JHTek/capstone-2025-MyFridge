<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/btn_back"
            android:contentDescription="뒤로 가기"
            android:tint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 가운데 타이틀 -->
        <TextView
            android:id="@+id/titleChecklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checklist"
            android:textSize="28sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- "오늘의 체크리스트" 서브타이틀 -->
    <TextView
        android:id="@+id/subTitleChecklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 체크리스트"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal" />
    <!-- 옵션 버튼 -->
    <ImageButton
        android:id="@+id/btnOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_more"
        android:contentDescription="옵션"
        android:tint="#000000"
        android:layout_marginTop="8dp"/>

    <!-- 체크리스트 항목들 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/checklistContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- 항목 추가 버튼 -->
    <EditText
        android:id="@+id/editChecklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="항목을 입력하세요"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/edit_text" />

    <!-- 항목 추가하기 버튼 -->
    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="항목 추가하기"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        android:layout_marginTop="8dp" />


</LinearLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

    <!-- 상단 바 배경 -->
    <View
        android:id="@+id/topBarBackground"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#B1B0B0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 앱 타이틀 (가운데 정렬) -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리집 냉장고"
        android:textSize="30dp"
        android:fontFamily="@font/font"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/topBarBackground"
        app:layout_constraintBottom_toBottomOf="@id/topBarBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 알림 버튼 (오른쪽 정렬) -->
    <ImageView
        android:id="@+id/btnNotification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_notification"
        android:contentDescription="알림"
        app:layout_constraintTop_toTopOf="@id/topBarBackground"
        app:layout_constraintBottom_toBottomOf="@id/topBarBackground"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <!-- 냉장고 추가 버튼 -->
    <LinearLayout
        android:id="@+id/btnAddRefrigeratorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/topBarBackground"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp">

        <!-- + 아이콘 -->
        <ImageView
            android:id="@+id/iconAdd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add2"
            android:contentDescription="추가 아이콘"
            android:layout_marginEnd="4dp" />

        <!-- 냉장고 만들기 버튼 -->
        <TextView
            android:id="@+id/btnAddRefrigerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily=""
            android:text="냉장고 만들기"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- 냉장고 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRefrigerators"
        android:layout_width="412dp"
        android:layout_height="557dp"
        android:padding="0dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAddRefrigeratorLayout"
        app:spanCount="2" />

    <!-- 카메라 이동 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOpenCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:backgroundTint="#B1B0B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 냉장고가 없을 때 보여줄 메시지 -->
    <TextView
        android:id="@+id/textNoProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="냉장고가 없습니다."
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerViewRefrigerators"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewRefrigerators"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>